---
import BasicLayout from './BasicLayout.astro';

const { title } = Astro.props;
---

<style is:global>
  article h1 {
    font-size: 3rem;
    font-weight: 650;
  }

  article h2 {
    font-size: 2rem;
    font-weight: 600;
  }

  article h3 {
    font-size: 1.3rem;
    font-weight: 600;
  }

  article ol {
    list-style-type: decimal;
    list-style-position: inside;
  }

  article ul {
    list-style-type: disc;
    list-style-position: inside;
  }

  article ul ul {
    padding-left: 2rem;
  }

  article tbody {
    text-align: right;
  }

  article table {
    margin-left: auto;
    margin-right: auto;
    border-collapse: collapse;
  }

  article table, th, td {
    border: solid 1px;
  }

  article th, td {
    padding-left: 8px;
    padding-right: 8px;
  }
</style>

<BasicLayout title={title}>
  <article class="flex flex-col gap-4">
    <slot />
  </article>
</BasicLayout>
